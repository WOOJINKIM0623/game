  <h1>Predict the Pattern!</h1>
  <div class="pattern" id="pattern">ğŸ”´ ğŸ”µ ğŸ”´ ğŸ”µ â“</div>
  <div class="choices">
    <button onclick="makeGuess('ğŸ”´')">ğŸ”´</button>
    <button onclick="makeGuess('ğŸ”µ')">ğŸ”µ</button>
    <button onclick="makeGuess('ğŸŸ¢')">ğŸŸ¢</button>
  </div>
  <div class="result" id="result"></div>
  <div class="score" id="scoreDisplay">ì ìˆ˜: 0</div>
  <script>
    let score = 0;
    let currentPattern = ['ğŸ”´', 'ğŸ”µ', 'ğŸ”´', 'ğŸ”µ'];
    let answer = 'ğŸ”´';

    function makeGuess(guess) {
      const resultDiv = document.getElementById('result');
      const scoreDisplay = document.getElementById('scoreDisplay');
      if (guess === answer) {
        score++;
        resultDiv.innerText = `ì •ë‹µ! ğŸ‰`;
        scoreDisplay.innerText = `ì ìˆ˜: ${score}`;
        nextRound();
      } else {
        resultDiv.innerText = `í‹€ë ¸ì–´ìš” ğŸ˜¢ íŒíŠ¸: ${getHint()}`;
      }
    }

    function nextRound() {
      currentPattern.push(answer);
      // íŒ¨í„´ì„ ë³µì¡í•˜ê²Œ í•˜ê¸° ìœ„í•´ 3ë²ˆì§¸ë¶€í„° ë¬´ì‘ìœ„ ì‚½ì…
      if (currentPattern.length > 6) {
        const options = ['ğŸ”´', 'ğŸ”µ', 'ğŸŸ¢'];
        answer = options[Math.floor(Math.random() * options.length)];
      } else {
        answer = (answer === 'ğŸ”´') ? 'ğŸ”µ' : 'ğŸ”´';
      }
      const patternDisplay = [...currentPattern, 'â“'].join(' ');
      document.getElementById('pattern').innerText = patternDisplay;
    }

    function getHint() {
      const counts = currentPattern.reduce((acc, val) => {
        acc[val] = (acc[val] || 0) + 1;
        return acc;
      }, {});
      return Object.entries(counts)
        .map(([emoji, count]) => `${emoji}: ${count}íšŒ`)
        .join(' / ');
    }
  </script>
